<div>
	<div class="div col span_5">
	<h2>Sign in</h2>
		<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
		 <div class="form-input">
		 <%= f.input :email, :label_html => { :class => 'email-label' }%>
		</div>
		<div class="form-input">
		 <%= f.input :password, :label_html => { :class => 'password-label' } %>
		</div>

		  <% if devise_mapping.rememberable? -%>
		    <div class="form-input"><%= f.input :remember_me, as: :boolean, :label_html => { :class => 'boolean-label' } %></div>
		  <% end -%>

		  <div><%= f.submit "Sign in" %></div>
		<% end %>

		<%= render "devise/shared/links" %>
	</div>
	<div class="div col span_6 signin">
		<h2>Signing in is easy and secure</h2>
	</div>

</div>
